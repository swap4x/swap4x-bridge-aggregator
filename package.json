{
  "name": "swap4x-bridge-aggregator",
  "version": "1.0.0",
  "description": "Swap4x Bridge Aggregator - Multi-chain bridge optimization platform",
  "main": "backend/server.js",
  "scripts": {
    "start": "cd backend && npm start",
    "dev": "concurrently \"cd backend && npm run dev\" \"cd frontend && npm run dev\"",
    "build": "cd frontend && npm run build",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "test": "cd backend && npm test",
    "deploy": "npm run build"
  },
  "keywords": [
    "bridge",
    "aggregator",
    "defi",
    "crypto",
    "cross-chain",
    "ethereum",
    "polygon",
    "arbitrum",
    "optimism"
  ],
  "author": "Swap4x Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/swap4x/swap4x-bridge-aggregator.git"
  },
  "bugs": {
    "url": "https://github.com/swap4x/swap4x-bridge-aggregator/issues"
  },
  "homepage": "https://swap4x.com",
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}

